<Window x:Class="SistemaJuridico.Views.ProcessoDetalhesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalhes do Processo"
        Height="650"
        Width="900">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->

        <StackPanel>
            <TextBlock Text="{Binding Numero}"
                       FontSize="20"
                       FontWeight="Bold"/>

            <TextBlock Text="{Binding Paciente}"
                       FontSize="16"/>
        </StackPanel>

        <!-- Área principal -->

        <TabControl Grid.Row="1">

            <TabItem Header="Resumo">

                <StackPanel Margin="10">

                    <TextBlock Text="Observações Fixas"/>
                    <TextBox Text="{Binding ObservacaoFixa}"
                             Height="100"
                             AcceptsReturn="True"/>

                </StackPanel>

            </TabItem>

            <TabItem Header="Contas">
                <TextBlock Text="Em construção"/>
            </TabItem>

            <TabItem Header="Histórico">
                <TextBlock Text="Em construção"/>
            </TabItem>

        </TabControl>

        <!-- Rodapé -->

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Salvar Rascunho"
                    Command="{Binding SalvarRascunhoCommand}"
                    Margin="5"/>

            <Button Content="Concluir"
                    Command="{Binding ConcluirCommand}"
                    Margin="5"/>

        </StackPanel>

    </Grid>
</Window>
