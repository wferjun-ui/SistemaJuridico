<UserControl x:Class="SistemaJuridico.Views.AuditoriaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">

            <DatePicker SelectedDate="{Binding DataInicial}" Width="130"/>
            <DatePicker SelectedDate="{Binding DataFinal}" Width="130" Margin="5,0"/>

            <TextBox Width="150"
                     Margin="5,0"
                     Text="{Binding UsuarioFiltro}"/>

            <TextBox Width="120"
                     Margin="5,0"
                     Text="{Binding ProcessoIdFiltro}"/>

            <Button Content="Filtrar"
                    Margin="10,0"
                    Command="{Binding FiltrarCommand}"/>

        </StackPanel>

        <!-- Lista -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Logs}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Data"
                                    Binding="{Binding Data}"
                                    Width="150"/>

                <DataGridTextColumn Header="Usuário"
                                    Binding="{Binding Usuario}"
                                    Width="150"/>

                <DataGridTextColumn Header="Ação"
                                    Binding="{Binding Acao}"
                                    Width="200"/>

                <DataGridTextColumn Header="Descrição"
                                    Binding="{Binding Descricao}"
                                    Width="*"/>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>
