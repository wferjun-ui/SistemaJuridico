<Window x:Class="SistemaJuridico.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dashboard" Height="600" Width="900">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

       <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Usuario}"

                   FontSize="16"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Processos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Editando"
                                    Binding="{Binding UsuarioEditando}"/>

                <DataGridTextColumn Header="Processo"
                                    Binding="{Binding Processo.Numero}"/>

                <DataGridTextColumn Header="Paciente"
                                    Binding="{Binding Processo.Paciente}"/>

                <DataGridTextColumn Header="Saldo a prestar"
                                    Binding="{Binding SaldoPendente}"/>

                <DataGridTextColumn Header="Diligência"
                                    Binding="{Binding Diligencia}"/>

                <DataGridTextColumn Header="Última Mov."
                                    Binding="{Binding UltimaMov}"/>

                <DataGridTextColumn Header="Situação"
                                    Binding="{Binding Rascunho}"/>

                <DataGridTemplateColumn Header="Abrir">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Abrir"
                                    Command="{Binding DataContext.AbrirProcessoCommand,
                                              RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
