<Window x:Class="SistemaJuridico.Views.MainShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Jurídico"
        WindowState="Maximized">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel Margin="10">

                <TextBlock Text="Sistema Jurídico"
                           Foreground="White"
                           FontSize="20"
                           Margin="10"/>

                <Button Content="Dashboard"
                        Margin="5"
                        Command="{Binding OpenDashboardCommand}"/>

                <Button Content="Processos"
                        Margin="5"
                        Command="{Binding OpenProcessosCommand}"/>

                <Button Content="Contas"
                        Margin="5"
                        Command="{Binding OpenContasCommand}"/>

            </StackPanel>
        </Border>

        <ContentControl x:Name="MainRegion"
                        Grid.Column="1"/>

    </Grid>
</Window>
