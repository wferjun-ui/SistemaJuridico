<Window x:Class="SistemaJuridico.Views.VerificacaoEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Registrar Verificação"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized">

    <Window.Resources>
        <Style TargetType="Calendar">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0,0"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">

        <!-- Ações -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Salvar"
                    Padding="16,6"
                    FontWeight="Bold"
                    Margin="0,0,8,0"
                    Command="{Binding SalvarCommand}" />

            <Button Content="Cancelar"
                    Padding="12,6"
                    Click="Cancelar_Click"/>
        </StackPanel>

        <!-- Conteúdo -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Status / Responsável -->
                <GroupBox Header="Status do Processo" Margin="0,0,0,10">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Status" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding StatusProcesso, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Responsável" Margin="0,0,0,4"/>
                            <TextBox Text="{Binding Responsavel, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Descrição -->
                <GroupBox Header="Descrição da Verificação" Margin="0,0,0,10">
                    <TextBox Margin="8"
                             AcceptsReturn="True"
                             Height="80"
                             TextWrapping="Wrap"
                             Text="{Binding Descricao, UpdateSourceTrigger=PropertyChanged}"/>
                </GroupBox>

                <!-- Diligência -->
                <GroupBox Header="Diligência" Margin="0,0,0,10">
                    <StackPanel Margin="8">

                        <CheckBox Content="Diligência realizada"
                                  Margin="0,0,0,6"
                                  IsChecked="{Binding DiligenciaRealizada}" />

                        <TextBlock Text="Descrição da diligência" Margin="0,0,0,4"/>
                        <TextBox AcceptsReturn="True"
                                 Height="70"
                                 Margin="0,0,0,6"
                                 TextWrapping="Wrap"
                                 Text="{Binding DescricaoDiligencia, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Prazo da diligência" Margin="0,0,0,4"/>
                        <DatePicker SelectedDateFormat="Short" Text="{Binding PrazoDiligencia, UpdateSourceTrigger=PropertyChanged}" Loaded="DatePicker_Loaded"/>
                    </StackPanel>
                </GroupBox>

                <!-- Pendências -->
                <GroupBox Header="Pendências" Margin="0,0,0,10">
                    <StackPanel Margin="8">

                        <CheckBox Content="Possui pendências"
                                  Margin="0,0,0,6"
                                  IsChecked="{Binding PossuiPendencias}" />

                        <TextBlock Text="Descrição das pendências" Margin="0,0,0,4"/>
                        <TextBox AcceptsReturn="True"
                                 Height="70"
                                 TextWrapping="Wrap"
                                 Text="{Binding DescricaoPendencias, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Prazos -->
                <GroupBox Header="Prazos e Notificações">
                    <Grid Margin="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Próximo prazo padrão" Margin="0,0,0,4"/>
                            <DatePicker SelectedDateFormat="Short" Text="{Binding ProximoPrazoPadrao, UpdateSourceTrigger=PropertyChanged}" Loaded="DatePicker_Loaded"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Data de notificação" Margin="0,0,0,4"/>
                            <DatePicker SelectedDateFormat="Short" Text="{Binding DataNotificacao, UpdateSourceTrigger=PropertyChanged}" Loaded="DatePicker_Loaded"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Verificação de terapias e demais itens" Margin="0,10,0,0">
                    <DataGrid Margin="8"
                              ItemsSource="{Binding ItensSaude}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowHeaderWidth="0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tipo"
                                                Width="120"
                                                Binding="{Binding Tipo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="Nome"
                                                Width="*"
                                                Binding="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="Qtd"
                                                Width="80"
                                                Binding="{Binding Qtd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="Necessidade"
                                                Width="120"
                                                IsReadOnly="True"
                                                Binding="{Binding NecessidadeTexto}" />

                            <DataGridTextColumn Header="Frequência"
                                                Width="130"
                                                Binding="{Binding Frequencia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="Local"
                                                Width="150"
                                                Binding="{Binding Local, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridTextColumn Header="Data Prescrição"
                                                Width="130"
                                                Binding="{Binding DataPrescricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDesnecessario}" Value="True">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDesnecessario}" Value="True">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridCheckBoxColumn Header="Tratamento desnecessário"
                                                    Width="170"
                                                    Binding="{Binding IsDesnecessario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridCheckBoxColumn Header="SUS"
                                                    Width="70"
                                                    Binding="{Binding IsSus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <DataGridCheckBoxColumn Header="Particular"
                                                    Width="95"
                                                    Binding="{Binding IsParticular, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

    </DockPanel>
</Window>
