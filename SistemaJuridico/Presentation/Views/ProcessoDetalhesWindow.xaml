<Window x:Class="SistemaJuridico.Views.ProcessoDetalhesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SistemaJuridico.Views"
        Title="Controle de Processos - Detalhes"
        Height="760"
        Width="1260"
        Background="#F3F4F6"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style x:Key="CampoBloqueavel" TargetType="Control">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ModoSomenteLeitura}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#FEF3C7"
                BorderBrush="#FCD34D"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10"
                Visibility="{Binding ModoSomenteLeitura, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="{Binding UsuarioEditandoTexto}"
                       FontWeight="SemiBold"
                       Foreground="#92400E"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="310"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Resumo do Processo"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937"
                                   Margin="0,0,0,8"/>
                        <Separator Margin="0,0,0,10"/>

                        <TextBlock Text="# NÂº Processo:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.Numero}" Margin="0,0,0,8"/>

                        <TextBlock Text="ðŸ‘¤ Paciente:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.Paciente}" Margin="0,0,0,8"/>

                        <TextBlock Text="ðŸ‘ª Genitor(a):" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.Representante}" Margin="0,0,0,8"/>

                        <TextBlock Text="âš– Juiz(a):" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.Juiz}" Margin="0,0,0,8"/>

                        <TextBlock Text="ðŸ“‚ Tipo:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.TipoProcesso}" Margin="0,0,0,8"/>

                        <Separator Margin="0,2,0,10"/>
                        <TextBlock Text="ðŸ’± Resumo Financeiro" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalContasAPrestar, StringFormat=R$ {0:N2}}"
                                   Foreground="#DC2626"
                                   FontWeight="Bold"
                                   FontSize="18"
                                   Margin="0,4,0,0"/>
                        <TextBlock Text="Valor a prestar" FontSize="11" Foreground="#6B7280" Margin="0,0,0,10"/>

                        <TextBlock Text="ðŸ“Œ Status Atual:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Processo.StatusFase}" Margin="0,0,0,8"/>

                        <TextBlock Text="ðŸ•’ Ãšltima verificaÃ§Ã£o:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding UltimaVerificacaoData}" Margin="0,0,0,4"/>
                        <TextBlock Margin="0,0,0,8"><Run Text="ResponsÃ¡vel: "/><Run Text="{Binding UltimaVerificacaoResponsavel}"/></TextBlock>

                        <TextBlock Text="ðŸ—“ PrescriÃ§Ã£o (90 dias):" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding DataPrescricao}" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding PrescricaoStatus}" Foreground="#B91C1C" Margin="0,0,0,8"/>

                        <TextBlock Text="ðŸ” Hash do Processo" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding HashProcesso}" FontFamily="Consolas" FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <TabControl>
                    <TabItem Header="ðŸ—‚ VerificaÃ§Ã£o Geral">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="âž• Nova VerificaÃ§Ã£o"
                                        Command="{Binding NovaVerificacaoCommand}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="White"
                                        BorderBrush="{StaticResource PrimaryBrush}"
                                        Style="{StaticResource CampoBloqueavel}"/>
                                <Button Content="ðŸ“„ Gerar RelatÃ³rio"
                                        Margin="8,0,0,0"
                                        Command="{Binding GerarRelatorioCommand}"
                                        Style="{StaticResource CampoBloqueavel}"/>
                            </StackPanel>

                            <DataGrid Grid.Row="1"
                                      ItemsSource="{Binding Verificacoes}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Data/Hora" Binding="{Binding DataHora}" Width="130"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding StatusProcesso}" Width="180"/>
                                    <DataGridTextColumn Header="ResponsÃ¡vel" Binding="{Binding Responsavel}" Width="170"/>
                                    <DataGridCheckBoxColumn Header="DiligÃªncia Pendente" Binding="{Binding DiligenciaPendente}" Width="110"/>
                                    <DataGridTextColumn Header="PendÃªncia/DescriÃ§Ã£o" Binding="{Binding PendenciaDescricao}" Width="*"/>
                                    <DataGridTextColumn Header="Prazo" Binding="{Binding ProximoPrazo}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <TabItem Header="ðŸ’° PrestaÃ§Ã£o de Contas">
                        <views:ContasView ProcessoId="{Binding Processo.Id}"/>
                    </TabItem>

                    <TabItem Header="â†© HistÃ³rico">
                        <DataGrid Margin="10"
                                  ItemsSource="{Binding Historicos}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  EnableRowVirtualization="True"
                                  EnableColumnVirtualization="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Data/Hora" Binding="{Binding DataHora}" Width="140"/>
                                <DataGridTextColumn Header="AÃ§Ã£o" Binding="{Binding Acao}" Width="260"/>
                                <DataGridTextColumn Header="UsuÃ¡rio" Binding="{Binding Usuario}" Width="180"/>
                                <DataGridTextColumn Header="Detalhes" Binding="{Binding Detalhes}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="âš™ Dados do Processo">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="NÃºmero" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Text="{Binding Processo.Numero}" Style="{StaticResource CampoBloqueavel}"/>

                            <TextBlock Grid.Row="1" Text="Paciente" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Processo.Paciente}" Style="{StaticResource CampoBloqueavel}"/>

                            <TextBlock Grid.Row="2" Text="Juiz" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Processo.Juiz}" Style="{StaticResource CampoBloqueavel}"/>

                            <TextBlock Grid.Row="3" Text="ClassificaÃ§Ã£o" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Processo.Classificacao}" Style="{StaticResource CampoBloqueavel}"/>

                            <TextBlock Grid.Row="4" Text="Fase" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="4"
                                      Grid.Column="1"
                                      SelectedValuePath="Content"
                                      SelectedValue="{Binding Processo.StatusFase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource CampoBloqueavel}">
                                <ComboBoxItem Content="Conhecimento"/>
                                <ComboBoxItem Content="ExecuÃ§Ã£o"/>
                                <ComboBoxItem Content="Arquivado"/>
                            </ComboBox>

                            <TextBlock Grid.Row="5" Text="ObservaÃ§Ãµes" VerticalAlignment="Top"/>
                            <TextBox Grid.Row="5"
                                     Grid.Column="1"
                                     Text="{Binding Processo.ObservacaoFixa}"
                                     AcceptsReturn="True"
                                     Height="130"
                                     VerticalScrollBarVisibility="Auto"
                                     Style="{StaticResource CampoBloqueavel}"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salvar rascunho"
                    Width="140"
                    Margin="5,0"
                    Command="{Binding SalvarRascunhoCommand}"
                    Style="{StaticResource CampoBloqueavel}"/>

            <Button Content="Concluir ediÃ§Ã£o"
                    Width="140"
                    Margin="5,0"
                    Command="{Binding ConcluirEdicaoCommand}"
                    Style="{StaticResource CampoBloqueavel}"/>

            <Button Content="Fechar" Width="90" Margin="5,0" Click="Fechar_Click"/>
        </StackPanel>
    </Grid>
</Window>
