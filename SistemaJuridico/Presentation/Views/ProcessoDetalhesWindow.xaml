<Window x:Class="SistemaJuridico.Views.ProcessoDetalhesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SistemaJuridico.Views"
        x:Name="RootWindow"
        Title="Detalhes do Processo"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="CampoBloqueavel" TargetType="Control">
            <Setter Property="IsEnabled" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ModoSomenteLeitura}" Value="True">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Setter Property="Opacity" Value="0.85"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FFF4CE"
                Padding="8"
                Margin="0 0 0 10"
                Visibility="{Binding ModoSomenteLeitura, Converter={StaticResource BoolToVis}}">

            <TextBlock Text="{Binding UsuarioEditandoTexto}"
                       FontWeight="Bold"
                       Foreground="DarkOrange"/>
        </Border>

        <ScrollViewer Grid.Row="1">

            <TabControl>

                <TabItem Header="Dados">

                    <Grid Margin="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="120"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Número:" VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding Processo.Numero}"
                                 Style="{StaticResource CampoBloqueavel}"/>

                        <TextBlock Grid.Row="1"
                                   Text="Paciente:"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Text="{Binding Processo.Paciente}"
                                 Style="{StaticResource CampoBloqueavel}"/>

                        <TextBlock Grid.Row="2"
                                   Text="Juiz:"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Row="2"
                                 Grid.Column="1"
                                 Text="{Binding Processo.Juiz}"
                                 Style="{StaticResource CampoBloqueavel}"/>

                        <TextBlock Grid.Row="3"
                                   Text="Classificação:"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Row="3"
                                 Grid.Column="1"
                                 Text="{Binding Processo.Classificacao}"
                                 Style="{StaticResource CampoBloqueavel}"/>

                        <TextBlock Grid.Row="4"
                                   Text="Fase:"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Row="4"
                                  Grid.Column="1"
                                  SelectedValuePath="Content"
                                  SelectedValue="{Binding Processo.StatusFase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{StaticResource CampoBloqueavel}">

                            <ComboBoxItem Content="Conhecimento"/>
                            <ComboBoxItem Content="Execução"/>
                            <ComboBoxItem Content="Arquivado"/>

                        </ComboBox>

                        <TextBlock Grid.Row="5"
                                   Text="Observações:"
                                   VerticalAlignment="Top"/>

                        <TextBox Grid.Row="5"
                                 Grid.Column="1"
                                 Text="{Binding Processo.ObservacaoFixa}"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Style="{StaticResource CampoBloqueavel}"/>

                    </Grid>

                </TabItem>

                <TabItem Header="Contas">
                    <views:ContasView ProcessoId="{Binding Processo.Id}" />
                </TabItem>

            </TabControl>

        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">

            <Button Content="Salvar rascunho"
                    Width="140"
                    Margin="5"
                    Command="{Binding SalvarRascunhoCommand}"
                    Style="{StaticResource CampoBloqueavel}" />

            <Button Content="Concluir edição"
                    Width="140"
                    Margin="5"
                    Command="{Binding ConcluirEdicaoCommand}"
                    Style="{StaticResource CampoBloqueavel}" />

            <Button Content="Fechar"
                    Width="100"
                    Margin="5"
                    Click="Fechar_Click"/>

        </StackPanel>

    </Grid>
</Window>
