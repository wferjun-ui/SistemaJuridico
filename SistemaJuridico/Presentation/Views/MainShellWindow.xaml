<Window x:Class="SistemaJuridico.Views.MainShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Jurídico"
        MinWidth="1200"
        MinHeight="760"
        WindowState="Maximized"
        Background="#F1F5F9">

    <Grid Margin="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="0,0,14,0"
                Padding="18"
                CornerRadius="16"
                Background="#0F172A">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="2,2,2,18">
                    <TextBlock Text="Sistema Jurídico"
                               Foreground="#F8FAFC"
                               FontSize="24"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Navegação principal"
                               Foreground="#94A3B8"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel>
                    <Button Content="Dashboard" Margin="0,5" HorizontalContentAlignment="Left" Command="{Binding OpenDashboardCommand}"/>
                    <Button Content="Processos" Margin="0,5" HorizontalContentAlignment="Left" Command="{Binding OpenProcessosCommand}"/>
                    <Button Content="Relatórios" Margin="0,5" HorizontalContentAlignment="Left" Command="{Binding OpenRelatoriosCommand}"/>
                    <Button Content="Auditoria" Margin="0,5" HorizontalContentAlignment="Left" Command="{Binding OpenAuditoriaCommand}"/>
                    <Button Content="Admin" Margin="0,5" HorizontalContentAlignment="Left" Command="{Binding OpenAdminCommand}"/>
                </StackPanel>

                <Button DockPanel.Dock="Bottom"
                        Content="Abrir depuração em tempo real"
                        Margin="0,12,0,0"
                        HorizontalContentAlignment="Center"
                        Command="{Binding OpenDebugConsoleCommand}"/>
            </DockPanel>
        </Border>

        <Border Grid.Column="1"
                Padding="14"
                CornerRadius="16"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <ContentControl x:Name="MainRegion"/>
        </Border>
    </Grid>
</Window>
