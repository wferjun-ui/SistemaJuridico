<Window x:Class="SistemaJuridico.Views.MainShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controle de Processos Jurídicos"
        MinWidth="1100"
        MinHeight="720"
        WindowState="Maximized"
        Background="#F3F4F6">

    <Window.Resources>
        <Style x:Key="SecondaryHeaderButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Padding" Value="14,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="0,0,0,12"
                Padding="14"
                CornerRadius="12"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚖ Controle de Processos"
                               Foreground="#1F2937"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Margin="0,0,16,0"/>

                    <Button Content="Dashboard" Margin="0,0,8,0" Padding="12,8" Command="{Binding OpenDashboardCommand}"/>
                </StackPanel>

                <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" ItemHeight="36">
                    <Button Content="Relatórios / Busca" Style="{StaticResource SecondaryHeaderButtonStyle}" Margin="0,0,8,0" Command="{Binding OpenRelatoriosCommand}"/>
                    <Button Content="Configurações do App" Style="{StaticResource SecondaryHeaderButtonStyle}" Margin="0,0,8,0" Command="{Binding OpenAdminCommand}"/>
                    <Button Content="Debug" Style="{StaticResource SecondaryHeaderButtonStyle}" Margin="0,0,8,0" MinWidth="120" Height="36" Command="{Binding OpenDebugConsoleCommand}"/>
                </WrapPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Padding="14"
                CornerRadius="16"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <ContentControl x:Name="MainRegion"/>
        </Border>
    </Grid>
</Window>
