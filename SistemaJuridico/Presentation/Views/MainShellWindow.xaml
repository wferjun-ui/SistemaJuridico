<Window x:Class="SistemaJuridico.Views.MainShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Jurídico"
        MinWidth="1200"
        MinHeight="760"
        WindowState="Maximized"
        Background="#FFF3F5F9">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="12"
                Padding="12"
                CornerRadius="14"
                Background="#FF1F2A37">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="8,10,8,16">
                    <TextBlock Text="Sistema Jurídico"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Painel principal"
                               Foreground="#B8C4D3"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel>
                    <Button Content="Dashboard"
                            Margin="0,4"
                            HorizontalContentAlignment="Left"
                            Command="{Binding OpenDashboardCommand}"/>

                    <Button Content="Processos"
                            Margin="0,4"
                            HorizontalContentAlignment="Left"
                            Command="{Binding OpenProcessosCommand}"/>

                    <Button Content="Auditoria"
                            Margin="0,4"
                            HorizontalContentAlignment="Left"
                            Command="{Binding OpenAuditoriaCommand}"/>

                    <Button Content="Admin"
                            Margin="0,4"
                            HorizontalContentAlignment="Left"
                            Command="{Binding OpenAdminCommand}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Column="1"
                Margin="12,12,12,12"
                Padding="12"
                CornerRadius="14"
                Background="White"
                BorderBrush="#FFE2E8F0"
                BorderThickness="1">
            <ContentControl x:Name="MainRegion"/>
        </Border>
    </Grid>
</Window>
