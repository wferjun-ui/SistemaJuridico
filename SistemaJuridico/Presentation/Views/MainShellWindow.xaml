<Window x:Class="SistemaJuridico.Views.MainShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Controle de Processos Jurídicos"
        MinWidth="1100"
        MinHeight="720"
        WindowState="Maximized"
        Background="#F3F4F6">

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="0,0,0,12"
                Padding="14"
                CornerRadius="12"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚖ Controle de Processos"
                               Foreground="#1F2937"
                               FontSize="34"
                               FontWeight="SemiBold"
                               Margin="0,0,16,0"/>

                    <Button Content="Dashboard" Margin="0,0,8,0" Padding="12,8" Command="{Binding OpenDashboardCommand}"/>
                </StackPanel>

                <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" ItemHeight="36">
                    <Button Content="Relatórios / Busca" Padding="14,6" Margin="0,0,8,0" Command="{Binding OpenRelatoriosCommand}"/>
                    <Button Content="Configurações do App" Padding="14,6" Margin="0,0,8,0" Command="{Binding OpenAdminCommand}"/>
                    <Button Content="Debug" Padding="8,4" FontSize="12" MinWidth="62" Height="28" Command="{Binding OpenDebugConsoleCommand}"/>
                </WrapPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="1"
                Padding="14"
                CornerRadius="16"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1">
            <ContentControl x:Name="MainRegion"/>
        </Border>
    </Grid>
</Window>
