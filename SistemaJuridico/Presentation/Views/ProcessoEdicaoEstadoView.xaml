<UserControl x:Class="SistemaJuridico.Views.ProcessoEdicaoEstadoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#FFF3CD"
            BorderBrush="#FFE69C"
            BorderThickness="1"
            Padding="8"
            Visibility="{Binding MensagemEstado, Converter={StaticResource NullToVisibilityConverter}}">

        <TextBlock Text="{Binding MensagemEstado}"
                   FontWeight="Bold"
                   Foreground="#664D03"/>
    </Border>

</UserControl>
