<Window x:Class="SistemaJuridico.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOPO -->

        <DockPanel Margin="0 0 0 10">

            <TextBlock Text="{Binding UsuarioLogadoTexto}"
                       FontWeight="Bold"
                       FontSize="14"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right">

                <Button Content="Atualizar"
                        Margin="5"
                        Command="{Binding CarregarCommand}"/>

                <Button Content="Admin"
                        Margin="5"
                        Click="AbrirEmails"/>

                <Button Content="Novo Processo"
                        Margin="5"
                        Click="NovoProcesso_Click"/>
            </StackPanel>

        </DockPanel>

        <!-- LISTA PROCESSOS -->

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Processos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  MouseDoubleClick="AbrirProcessoDoubleClick">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Número"
                                    Binding="{Binding Processo.Numero}"
                                    Width="150"/>

                <DataGridTextColumn Header="Paciente"
                                    Binding="{Binding Processo.Paciente}"
                                    Width="200"/>

                <DataGridTextColumn Header="Juiz"
                                    Binding="{Binding Processo.Juiz}"
                                    Width="150"/>

                <DataGridTextColumn Header="Status"
                                    Binding="{Binding StatusVisual}"
                                    Width="200"/>

                <DataGridTextColumn Header="Financeiro"
                                    Binding="{Binding ResumoFinanceiro}"
                                    Width="200"/>

                <DataGridTextColumn Header="Diligência"
                                    Binding="{Binding DiligenciaTexto}"
                                    Width="150"/>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
