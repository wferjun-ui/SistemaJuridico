<Window x:Class="SistemaJuridico.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:SistemaJuridico.Views"
        Title="Dashboard"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Margin="10">
            <TextBlock Text="{Binding UsuarioLogadoTexto}" FontWeight="Bold" FontSize="14" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Admin" Margin="5" Click="AbrirEmails"/>
                <Button Content="Novo Processo" Margin="5" Click="NovoProcesso_Click"/>
            </StackPanel>
        </DockPanel>

        <views:DashboardView Grid.Row="1" DataContext="{Binding}"/>
    </Grid>
</Window>
