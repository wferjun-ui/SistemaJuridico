<Window x:Class="SistemaJuridico.Views.CadastroProcessoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:SistemaJuridico.Behaviors"
        mc:Ignorable="d"
        Title="Cadastrar Novo Processo"
        Height="780"
        Width="1150"
        MinHeight="680"
        MinWidth="980"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
        </Style>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Cadastrar Novo Processo"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#1F2937"/>
                    <TextBlock Text="Preencha os campos obrigatÃ³rios e organize os dados do processo em um Ãºnico fluxo."
                               Margin="0,4,0,0"
                               Foreground="#6B7280"/>
                </StackPanel>

                <ProgressBar DockPanel.Dock="Right"
                             Width="180"
                             Height="7"
                             VerticalAlignment="Center"
                             IsIndeterminate="True">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,12,10">
                            <TextBlock Text="# NÃºmero do Processo *" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Numero, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Formato: 0000000-00.0000.0.00.0000" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,10">
                            <TextBlock Text="ðŸ‘¤ Nome do Paciente *" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Paciente, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,12,10">
                            <TextBlock Text="ðŸ‘¥ Nome do Genitor(a)" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Representante, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TemRepresentante}" Value="False">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Text" Value="NÃ£o possui"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <CheckBox Content="Possui genitor/representante"
                                      IsChecked="{Binding TemRepresentante}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,0,0,10">
                            <TextBlock Text="âš– Nome do Juiz(a) *" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Juiz, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ“ Tipo de Processo *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding TiposProcessoDisponiveis}"
                                      SelectedItem="{Binding SelectedTipoProcesso, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="12,0,0,0">
                            <TextBlock Text="â„¹ Status Inicial do Processo *" FontWeight="SemiBold"/>
                            <ComboBox SelectedValuePath="Content"
                                      SelectedValue="{Binding NovoProcesso.StatusFase, UpdateSourceTrigger=PropertyChanged}">
                                <ComboBoxItem Content="Conhecimento"/>
                                <ComboBoxItem Content="ExecuÃ§Ã£o"/>
                                <ComboBoxItem Content="Arquivado"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock DockPanel.Dock="Left" Text="RÃ©us" FontSize="16" FontWeight="SemiBold"/>
                            <Button DockPanel.Dock="Right"
                                    Content="+ Adicionar RÃ©u"
                                    Command="{Binding AdicionarReuCommand}"
                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    BorderBrush="{StaticResource PrimaryBrush}"/>
                        </DockPanel>

                        <ItemsControl ItemsSource="{Binding Reus}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4,0,4">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAtivo}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                        <Button Grid.Column="1"
                                                Content="Desativar"
                                                Margin="8,0,0,0"
                                                MinWidth="110"
                                                Command="{Binding DataContext.RemoverReuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessoSaude}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <DockPanel Margin="0,0,0,10">
                            <TextBlock DockPanel.Dock="Left"
                                       Text="Dados de SaÃºde"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            <Button DockPanel.Dock="Right"
                                    Content="+ Adicionar item"
                                    Command="{Binding AdicionarItemSaudeCommand}"
                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    BorderBrush="{StaticResource PrimaryBrush}"/>
                        </DockPanel>

                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding ItensSaudeCadastro}"
                                  EnableRowVirtualization="True" EnableColumnVirtualization="True" VirtualizingPanel.ScrollUnit="Pixel">
                            <DataGrid.Columns>
                                <DataGridComboBoxColumn Header="Tipo"
                                                        Width="170"
                                                        ItemsSource="{Binding TiposDisponiveis}"
                                                        SelectedItemBinding="{Binding Tipo, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTemplateColumn Header="DescriÃ§Ã£o" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Nome}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding SugestoesNome}"
                                                      Text="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="False"
                                                      StaysOpenOnEdit="True"
                                                      behaviors:ComboBoxSearchBehavior.EnableContainsFilter="True"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Qtd." Width="130" Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTemplateColumn Header="Local" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Local}" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Local, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ExigeLocal}" Value="False">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="Text" Value=""/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="AÃ§Ãµes" Width="110">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remover" Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,12,0,0" Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           Foreground="#374151"
                           Text="{Binding StatusMensagem}"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âœ• Cancelar" Width="130" Margin="0,0,8,0" Command="{Binding CancelarCommand}"/>
                    <Button Content="ðŸ’¾ Salvar" Width="160" Command="{Binding SalvarCommand}"
                            Background="{StaticResource PrimaryBrush}" Foreground="White" BorderBrush="{StaticResource PrimaryBrush}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
