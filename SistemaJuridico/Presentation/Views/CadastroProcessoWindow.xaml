<Window x:Class="SistemaJuridico.Views.CadastroProcessoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Novo Processo"
        Height="450"
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Número:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding NovoProcesso.Numero}"/>

            <TextBlock Grid.Row="1"
                       Text="Paciente:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding NovoProcesso.Paciente}"/>

            <TextBlock Grid.Row="2"
                       Text="Juiz:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding NovoProcesso.Juiz}"/>

            <TextBlock Grid.Row="3"
                       Text="Classificação:"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Text="{Binding NovoProcesso.Classificacao}"/>

        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">

            <Button Content="Salvar"
                    Width="120"
                    Margin="5"
                    Command="{Binding SalvarCommand}"/>

            <Button Content="Cancelar"
                    Width="120"
                    Margin="5"
                    Command="{Binding CancelarCommand}"/>

        </StackPanel>

    </Grid>
</Window>

