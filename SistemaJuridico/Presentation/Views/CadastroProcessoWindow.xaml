<Window x:Class="SistemaJuridico.Views.CadastroProcessoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cadastrar Novo Processo"
        Height="780"
        Width="1150"
        MinHeight="680"
        MinWidth="980"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="UniformActionButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="Cadastrar Novo Processo"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#1F2937"/>
                    <TextBlock Text="Preencha os campos obrigatÃ³rios e organize os dados do processo em um Ãºnico fluxo."
                               Margin="0,4,0,0"
                               Foreground="#6B7280"/>
                </StackPanel>

                <ProgressBar DockPanel.Dock="Right"
                             Width="180"
                             Height="7"
                             VerticalAlignment="Center"
                             IsIndeterminate="True">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,12,10">
                            <TextBlock Text="# NÃºmero do Processo *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding SugestoesNumeroProcesso}"
                                      Text="{Binding NumeroProcesso, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      StaysOpenOnEdit="True"
                                                      IsDropDownOpen="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource Self}}"/>
                            <TextBlock Text="Formato: 0000000-00.0000.0.00.0000" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,10">
                            <TextBlock Text="ðŸ‘¤ Nome do Paciente *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding SugestoesPacientes}"
                                      Text="{Binding NovoProcesso.Paciente, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      StaysOpenOnEdit="True"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,12,10">
                            <TextBlock Text="ðŸ‘¥ Nome do Genitor(a)" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding SugestoesRepresentantes}"
                                      Text="{Binding NovoProcesso.Representante, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      StaysOpenOnEdit="True">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TemRepresentante}" Value="False">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Text" Value="NÃ£o possui"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Style>
                            </ComboBox>
                            <CheckBox Content="Possui genitor/representante"
                                      IsChecked="{Binding TemRepresentante}"
                                      Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,0,0,10">
                            <TextBlock Text="âš– Nome do Juiz(a) *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding SugestoesJuizes}"
                                      Text="{Binding NovoProcesso.Juiz, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="True"
                                      StaysOpenOnEdit="True"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ“ Tipo de Processo *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding TiposProcessoDisponiveis}"
                                      SelectedItem="{Binding SelectedTipoProcesso, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Left"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="12,0,0,0">
                            <TextBlock Text="â„¹ Status Inicial do Processo *" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding StatusInicialDisponiveis}"
                                      SelectedItem="{Binding NovoProcesso.StatusFase, UpdateSourceTrigger=PropertyChanged}"
                                      VerticalContentAlignment="Center"
                                      HorizontalContentAlignment="Left"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="RÃ©us" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <ItemsControl ItemsSource="{Binding Reus}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4,0,4">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAtivo}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0"
                                                 ItemsSource="{Binding SugestoesNome}"
                                                 Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                                                 IsEditable="True"
                                                 IsTextSearchEnabled="True"
                                                 StaysOpenOnEdit="True"/>
                                        <Button Grid.Column="1"
                                                Content="Desativar"
                                                Style="{StaticResource UniformActionButton}"
                                                Margin="8,0,0,0"
                                                MinWidth="110"
                                                Command="{Binding DataContext.RemoverReuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Button Content="+ Adicionar RÃ©u"
                                Style="{StaticResource UniformActionButton}"
                                HorizontalAlignment="Left"
                                Margin="0,8,0,0"
                                Command="{Binding AdicionarReuCommand}"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                BorderBrush="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessoSaude}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="Dados de SaÃºde"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <DataGrid x:Name="ItensSaudeDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding ItensSaudeCadastro}"
                                  EnableRowVirtualization="True" EnableColumnVirtualization="True" VirtualizingPanel.ScrollUnit="Pixel"
                                  HeadersVisibility="Column" RowHeaderWidth="0"
                                  VerticalAlignment="Top" MinHeight="150" MaxHeight="360"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  GridLinesVisibility="Horizontal"
                                  RowHeight="44">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Tipo" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding TiposDisponiveis}"
                                                      SelectedItem="{Binding Tipo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      VerticalContentAlignment="Center"
                                                      HorizontalContentAlignment="Left"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="DescriÃ§Ã£o" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding SugestoesNome}"
                                                      Text="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      IsEditable="True"
                                                      IsTextSearchEnabled="True"
                                                      StaysOpenOnEdit="True"
                                                      IsDropDownOpen="{Binding IsKeyboardFocusWithin, RelativeSource={RelativeSource Self}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Qtd." Width="130">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="22"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}" VerticalContentAlignment="Center"/>
                                                <Grid Grid.Column="1" Margin="2,0,0,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    <Button Grid.Row="0" Content="â–²" FontSize="9" Padding="0" Margin="0,0,0,1"
                                                            Command="{Binding DataContext.IncrementarQuantidadeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Grid.Row="1" Content="â–¼" FontSize="9" Padding="0" Margin="0,1,0,0"
                                                            Command="{Binding DataContext.DecrementarQuantidadeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding}"/>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="Local" Width="220">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Local, UpdateSourceTrigger=PropertyChanged}">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ExigeLocal}" Value="False">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="Text" Value=""/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="AÃ§Ãµes" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remover" Style="{StaticResource UniformActionButton}" MinWidth="110" Height="34" Margin="0" Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Content="+ Adicionar item"
                                Style="{StaticResource UniformActionButton}"
                                HorizontalAlignment="Left"
                                Margin="0,8,0,0"
                                Command="{Binding AdicionarItemSaudeCommand}"
                                Background="{StaticResource PrimaryBrush}"
                                Foreground="White"
                                BorderBrush="{StaticResource PrimaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Style="{StaticResource Card}" Margin="0,12,0,0" Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           Foreground="#374151"
                           Text="{Binding StatusMensagem}"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="âœ• Cancelar" Style="{StaticResource UniformActionButton}" Width="150" Margin="0,0,8,0" Command="{Binding CancelarCommand}"/>
                    <Button Content="ðŸ’¾ Salvar" Style="{StaticResource UniformActionButton}" Width="150" Command="{Binding SalvarCommand}"
                            Background="{StaticResource PrimaryBrush}" Foreground="White" BorderBrush="{StaticResource PrimaryBrush}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
