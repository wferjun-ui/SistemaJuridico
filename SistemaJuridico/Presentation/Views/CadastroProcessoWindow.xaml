<Window x:Class="SistemaJuridico.Views.CadastroProcessoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Novo Processo"
        Height="760"
        Width="1050"
        MinHeight="650"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="10" Padding="14" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Cadastro de Processo"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"/>
                <TextBlock Text="Campos obrigatórios com validação CNJ, réus múltiplos e itens de saúde."
                           Margin="0,4,0,0"
                           Foreground="#6B7280"/>

                <ProgressBar Margin="0,10,0,0"
                             Height="6"
                             IsIndeterminate="True">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSaving}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="White" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,12,10">
                            <TextBlock Text="Número CNJ" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Numero, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Text="Formato: 0000000-00.0000.0.00.0000" FontSize="11" Foreground="#6B7280"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,10">
                            <TextBlock Text="Paciente" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Paciente, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,12,10">
                            <TextBlock Text="Genitor/Representante" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Representante, UpdateSourceTrigger=PropertyChanged}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TemRepresentante}" Value="False">
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Text" Value="Não possui"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <CheckBox Content="Possui genitor/representante"
                                      IsChecked="{Binding TemRepresentante}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,0,0,10">
                            <TextBlock Text="Juiz" FontWeight="SemiBold"/>
                            <TextBox Text="{Binding NovoProcesso.Juiz, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0,0,12,0">
                            <TextBlock Text="Tipo de Processo" FontWeight="SemiBold"/>
                            <ComboBox ItemsSource="{Binding TiposProcessoDisponiveis}"
                                      SelectedItem="{Binding SelectedTipoProcesso, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="16" Margin="0,0,0,12">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock DockPanel.Dock="Left" Text="Réus" FontSize="16" FontWeight="SemiBold"/>
                            <Button DockPanel.Dock="Right" Content="+ Adicionar Réu" Command="{Binding AdicionarReuCommand}"/>
                        </DockPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBox Width="380"
                                     Text="{Binding NovoReu, UpdateSourceTrigger=PropertyChanged}"
                                     ToolTip="Digite um nome e clique em adicionar"/>
                            <Button Content="Adicionar"
                                    Command="{Binding AdicionarReuCommand}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding Reus}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,4,0,4">
                                        <Button DockPanel.Dock="Right"
                                                Content="Remover"
                                                Command="{Binding DataContext.RemoverReuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                        <TextBox Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="16">
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProcessoSaude}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel>
                            <TextBlock Text="Dados de Saúde"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="Medicamentos" FontWeight="SemiBold"/>
                            <Button Content="+ Medicamento" HorizontalAlignment="Left" Command="{Binding AdicionarMedicamentoCommand}"/>
                            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Medicamentos}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Nome" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          ItemsSource="{Binding DataContext.SugestoesMedicamentos, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Quantidade" Width="130" Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTemplateColumn Header="Ações" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remover"
                                                        Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="Terapias" FontWeight="SemiBold"/>
                            <Button Content="+ Terapia" HorizontalAlignment="Left" Command="{Binding AdicionarTerapiaCommand}"/>
                            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Terapias}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Nome" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          ItemsSource="{Binding DataContext.SugestoesTerapias, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Quantidade" Width="130" Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Local de realização" Width="220" Binding="{Binding Local, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTemplateColumn Header="Ações" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remover"
                                                        Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="Cirurgias" FontWeight="SemiBold"/>
                            <Button Content="+ Cirurgia" HorizontalAlignment="Left" Command="{Binding AdicionarCirurgiaCommand}"/>
                            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Cirurgias}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Nome" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox IsEditable="True"
                                                          IsTextSearchEnabled="True"
                                                          ItemsSource="{Binding DataContext.SugestoesCirurgias, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Quantidade" Width="130" Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTemplateColumn Header="Ações" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remover"
                                                        Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Text="Outros" FontWeight="SemiBold"/>
                            <Button Content="+ Outro" HorizontalAlignment="Left" Command="{Binding AdicionarOutroSaudeCommand}"/>
                            <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding OutrosSaude}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Descrição" Width="*" Binding="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTextColumn Header="Quantidade" Width="130" Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"/>
                                    <DataGridTemplateColumn Header="Ações" Width="110">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Remover"
                                                        Command="{Binding DataContext.RemoverSaudeItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="0,12,0,0">
            <TextBlock DockPanel.Dock="Left"
                       VerticalAlignment="Center"
                       Foreground="#374151"
                       Text="{Binding StatusMensagem}"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" Width="130" Command="{Binding CancelarCommand}"/>
                <Button Content="Salvar Processo" Width="160" Command="{Binding SalvarCommand}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
