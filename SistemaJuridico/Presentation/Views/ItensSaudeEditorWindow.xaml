<Window x:Class="SistemaJuridico.Views.ItensSaudeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Itens de Saúde"
        Height="520"
        Width="900"
        WindowStartupLocation="CenterOwner">

    <DockPanel Margin="10">

        <!-- Barra de ações -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Right">

            <Button Content="Adicionar"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Command="{Binding AdicionarCommand}" />

            <Button Content="Remover"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Command="{Binding RemoverCommand}" />

            <Button Content="Desnecessário"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Command="{Binding AlternarDesnecessarioCommand}" />

            <Button Content="Bloqueio"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Command="{Binding AlternarBloqueioCommand}" />

            <Button Content="Recarregar"
                    Padding="10,4"
                    Margin="0,0,8,0"
                    Command="{Binding RecarregarCommand}" />

            <Button Content="Salvar"
                    Padding="14,4"
                    FontWeight="Bold"
                    Margin="0,0,8,0"
                    Command="{Binding SalvarCommand}" />

            <Button Content="Fechar"
                    Padding="10,4"
                    Click="Fechar_Click"/>
        </StackPanel>

        <!-- Grid principal -->
        <DataGrid ItemsSource="{Binding Itens}"
                  SelectedItem="{Binding ItemSelecionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0">

            <DataGrid.Columns>

                <DataGridComboBoxColumn Header="Tipo"
                                        Width="120"
                                        SelectedItemBinding="{Binding Tipo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding DataContext.TiposDisponiveis, RelativeSource={RelativeSource AncestorType=Window}}" />

                <DataGridTextColumn Header="Nome"
                                    Width="*"
                                    Binding="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Qtd"
                                    Width="70"
                                    Binding="{Binding Qtd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Frequência"
                                    Width="110"
                                    Binding="{Binding Frequencia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Local"
                                    Width="150"
                                    Binding="{Binding Local, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Data Prescrição"
                                    Width="130"
                                    Binding="{Binding DataPrescricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridCheckBoxColumn Header="Desnecessário"
                                        Width="110"
                                        Binding="{Binding IsDesnecessario, Mode=TwoWay}" />

                <DataGridCheckBoxColumn Header="Bloqueio"
                                        Width="90"
                                        Binding="{Binding TemBloqueio, Mode=TwoWay}" />

            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>
</Window>
