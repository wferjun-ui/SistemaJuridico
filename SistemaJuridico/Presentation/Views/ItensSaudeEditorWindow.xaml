<Window x:Class="SistemaJuridico.Views.ItensSaudeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behaviors="clr-namespace:SistemaJuridico.Behaviors"
        mc:Ignorable="d"
        Title="Itens de Saúde"
        Height="600"
        Width="980"
        MinHeight="450"
        MinWidth="860"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de ações -->
        <WrapPanel Grid.Row="0"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Right"
                   ItemHeight="30">

            <Button Content="Adicionar"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Command="{Binding AdicionarCommand}" />

            <Button Content="Remover"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Command="{Binding RemoverCommand}" />

            <Button Content="Desnecessário"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Command="{Binding AlternarDesnecessarioCommand}" />

            <Button Content="Bloqueio"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Command="{Binding AlternarBloqueioCommand}" />

            <Button Content="Recarregar"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Command="{Binding RecarregarCommand}" />

            <Button Content="Salvar"
                    Padding="14,4"
                    FontWeight="Bold"
                    Margin="0,0,8,8"
                    Command="{Binding SalvarCommand}" />

            <Button Content="Fechar"
                    Padding="10,4"
                    MinWidth="110"
                    Margin="0,0,8,8"
                    Click="Fechar_Click"/>
        </WrapPanel>

        <!-- Grid principal -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Itens}"
                  SelectedItem="{Binding ItemSelecionado}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto">

            <DataGrid.Columns>

                <DataGridComboBoxColumn Header="Tipo"
                                        Width="130"
                                        SelectedItemBinding="{Binding Tipo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding DataContext.TiposDisponiveis, RelativeSource={RelativeSource AncestorType=Window}}" />

                <DataGridTemplateColumn Header="Nome" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nome}" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding SugestoesNome}"
                                      Text="{Binding Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      StaysOpenOnEdit="True"
                                      behaviors:ComboBoxSearchBehavior.EnableContainsFilter="True"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Qtd"
                                    Width="80"
                                    Binding="{Binding Qtd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Frequência"
                                    Width="120"
                                    Binding="{Binding Frequencia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Local"
                                    Width="150"
                                    Binding="{Binding Local, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridTextColumn Header="Data Prescrição"
                                    Width="130"
                                    Binding="{Binding DataPrescricao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <DataGridCheckBoxColumn Header="Desnecessário"
                                        Width="110"
                                        Binding="{Binding IsDesnecessario, Mode=TwoWay}" />

                <DataGridCheckBoxColumn Header="Bloqueio"
                                        Width="90"
                                        Binding="{Binding TemBloqueio, Mode=TwoWay}" />

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
