<Window x:Class="SistemaJuridico.Views.AdminEmailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Administração"
        MinHeight="620"
        MinWidth="920"
        Height="680"
        Width="980"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <TabControl>
            <TabItem Header="E-mails autorizados">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0"
                             Text="{Binding NovoEmail}"
                             materialDesign:HintAssist.Hint="Novo e-mail"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <Button Grid.Row="1"
                            Content="Adicionar e-mail"
                            Command="{Binding AdicionarEmailCommand}"
                            Margin="0,10,0,10"
                            Width="180"
                            HorizontalAlignment="Left"/>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding Emails}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="E-mail" Binding="{Binding}" Width="*"/>
                            <DataGridTemplateColumn Header="Ações" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Remover"
                                                Command="{Binding DataContext.RemoverEmailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" MinWidth="100" HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Usuários">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button Content="Recarregar" Command="{Binding RecarregarCommand}" MinWidth="120" Margin="0,0,10,0"/>
                        <Button Content="Excluir usuário" Command="{Binding ExcluirUsuarioCommand}" MinWidth="160"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Column="0"
                                  ItemsSource="{Binding Usuarios}"
                                  SelectedItem="{Binding UsuarioSelecionado}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Usuário" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="*"/>
                                <DataGridTextColumn Header="Perfil" Binding="{Binding Perfil}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="Perfil" FontWeight="Bold"/>
                            <ComboBox ItemsSource="{Binding PerfisDisponiveis}"
                                      SelectedItem="{Binding NovoPerfil}"
                                      Margin="0,6,0,0"/>
                            <Button Content="Salvar perfil"
                                    Command="{Binding AlterarPerfilUsuarioCommand}"
                                    Margin="0,8,0,16"/>

                            <TextBlock Text="Nova senha" FontWeight="Bold"/>
                            <TextBox Text="{Binding NovaSenha}"
                                     materialDesign:HintAssist.Hint="Digite a nova senha"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Margin="0,6,0,0"/>
                            <Button Content="Alterar senha"
                                    Command="{Binding AlterarSenhaUsuarioCommand}"
                                    Margin="0,8,0,0"/>

                            <TextBlock Margin="0,16,0,0"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="Gray"
                                       Text="Perfis: Admin (controle total), Operador (operações), Leitura (somente consulta)."/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
