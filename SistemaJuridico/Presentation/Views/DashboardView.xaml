<UserControl x:Class="SistemaJuridico.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4F46E5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Sincronizando..."
                       Visibility="{Binding CarregandoEmSegundoPlano, Converter={StaticResource BoolToVis}}"
                       Margin="0,0,0,10"
                       Foreground="#6B7280"
                       FontWeight="SemiBold"/>

            <Grid Grid.Row="1" Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,8,0" Padding="12" CornerRadius="10" BorderThickness="1" BorderBrush="#FCA5A5" Background="#FEF2F2">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#B91C1C" Text="âš  Processos Atrasados"/>
                        <TextBlock Text="{Binding TotalAtrasados}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                        <ListBox ItemsSource="{Binding PainelAtrasadosResumo}" Margin="0,8,0,0" MinHeight="84" MaxHeight="130" BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="8,0,0,0" Padding="12" CornerRadius="10" BorderThickness="1" BorderBrush="#FDE68A" Background="#FFFBEB">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#A16207" Text="â± Para Atrasar"/>
                        <TextBlock Text="{Binding TotalAAtrasar}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                        <ListBox ItemsSource="{Binding PainelAAtrasarResumo}" Margin="0,8,0,0" MinHeight="84" MaxHeight="130" BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="10" Background="White" Padding="12">
                    <StackPanel>
                        <TextBlock Text="ðŸ”Ž Pesquisar e Selecionar Processo" FontWeight="SemiBold" Foreground="#374151"/>
                        <TextBox Margin="0,8,0,0"
                                 GotFocus="SearchTextBox_OnGotFocus"
                                 Text="{Binding TextoBusca, UpdateSourceTrigger=PropertyChanged}"
                                 MinHeight="34"
                                 ToolTip="Digite 3+ letras para pesquisar processos ou clique para ver a lista"/>
                        <TextBlock Margin="0,6,0,0" Foreground="#6B7280" FontSize="12" Text="Digite 3+ letras para pesquisar por nÃºmero, paciente, genitor, juiz, tipo ou status, ou clique no campo para ver a lista."/>

                        <ListBox Margin="0,8,0,0"
                                 MaxHeight="220"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Visibility="{Binding MostrarResultadosBusca, Converter={StaticResource BoolToVis}}"
                                 ItemsSource="{Binding ProcessosBusca}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button HorizontalContentAlignment="Left"
                                            Background="White"
                                            BorderBrush="#D1D5DB"
                                            Foreground="#1F2937"
                                            Padding="10,8"
                                            Command="{Binding DataContext.AbrirProcessoBuscaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Paciente}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Numero}" FontSize="12" Opacity="0.85"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Content="+ Novo Processo"
                                Style="{StaticResource PrimaryActionButtonStyle}"
                                Margin="0,10,0,0"
                                Height="34"
                                HorizontalAlignment="Stretch"
                                Command="{Binding NovoProcessoCommand}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="12,0,0,0" Padding="12" CornerRadius="10" BorderThickness="1" BorderBrush="#BFDBFE" Background="#EFF6FF">
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥ UsuÃ¡rios Ativos Recentemente" FontWeight="SemiBold" Foreground="#1D4ED8"/>
                        <ListBox ItemsSource="{Binding UsuariosAtivosRecentemente}" Margin="0,8,0,0" MinHeight="92" MaxHeight="210" BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="{Binding NomeUsuario}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding UltimaAtividadeRelativaTexto}" FontSize="12" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding UltimoProcessoTexto}" FontSize="12" Foreground="#1F2937" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="3" Padding="14" CornerRadius="10" BorderThickness="1" BorderBrush="#E3E8EF" Background="#F9FBFD" Margin="0,0,0,14">
                <StackPanel>
                    <TextBlock Text="Status de alteraÃ§Ãµes nÃ£o salvas" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ResumoRascunhosTexto}" Margin="0,5,0,0"/>
                    <TextBlock Text="{Binding UsuarioLogadoTexto}" Margin="0,3,0,0" Opacity="0.72"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="4" Padding="14" CornerRadius="10" BorderThickness="1" BorderBrush="#E5E7EB" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MinHeight="220">
                    <StackPanel>
                        <TextBlock Text="Detalhes do Processo" FontSize="18" FontWeight="SemiBold" Foreground="#1F2937"/>
                        <TextBlock Margin="0,10,0,0" Text="{Binding PainelDetalhesProcessoTexto}" Foreground="#6B7280" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>
