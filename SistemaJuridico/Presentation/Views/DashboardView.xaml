<UserControl x:Class="SistemaJuridico.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,18">
                <TextBlock Text="Dashboard"
                           FontSize="28"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Acompanhe apenas processos com risco de prazo e status de salvamento."
                           Opacity="0.72"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Border Grid.Row="1"
                    Margin="0,0,0,18"
                    Padding="16"
                    CornerRadius="12"
                    BorderThickness="1"
                    BorderBrush="#FFD9DEE7"
                    Background="#FFF9FBFD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Atrasados"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalAtrasados}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                        <TextBlock Text="A atrasar (7 dias)"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalAAtrasar}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Bloqueados"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding TotalBloqueados}"
                                   FontSize="24"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <GroupBox Grid.Row="2" Header="Processos atrasados" Margin="0,0,0,14">
                <DataGrid ItemsSource="{Binding ProcessosAtrasados}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          MinHeight="190"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Processo" Binding="{Binding NumeroProcesso}" Width="130"/>
                        <DataGridTextColumn Header="Diligência" Binding="{Binding DescricaoDiligencia}" Width="*"/>
                        <DataGridTextColumn Header="Prazo" Binding="{Binding PrazoTexto}" Width="110"/>
                        <DataGridTextColumn Header="Salvamento" Binding="{Binding StatusSalvamentoTexto}" Width="170"/>
                        <DataGridTextColumn Header="Motivo do rascunho" Binding="{Binding MotivoRascunho}" Width="220"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <StackPanel Grid.Row="3">
                <GroupBox Header="Processos a atrasar (próximos 7 dias)" Margin="0,0,0,14">
                    <DataGrid ItemsSource="{Binding ProcessosAAtrasar}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              MinHeight="190"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Processo" Binding="{Binding NumeroProcesso}" Width="130"/>
                            <DataGridTextColumn Header="Diligência" Binding="{Binding DescricaoDiligencia}" Width="*"/>
                            <DataGridTextColumn Header="Prazo" Binding="{Binding PrazoTexto}" Width="110"/>
                            <DataGridTextColumn Header="Salvamento" Binding="{Binding StatusSalvamentoTexto}" Width="170"/>
                            <DataGridTextColumn Header="Motivo do rascunho" Binding="{Binding MotivoRascunho}" Width="220"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <Border Padding="14"
                        CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="#FFE3E8EF"
                        Background="#FFF9FBFD"
                        Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="Status de alterações não salvas"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ResumoRascunhosTexto}"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding UsuarioLogadoTexto}"
                                   Margin="0,3,0,0"
                                   Opacity="0.72"/>
                    </StackPanel>
                </Border>

                <GroupBox Header="Processos bloqueados">
                    <ListBox ItemsSource="{Binding ProcessosBloqueados}" MinHeight="90"/>
                </GroupBox>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
