<UserControl x:Class="SistemaJuridico.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#4F46E5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Padding="14" Margin="0,0,0,14" CornerRadius="10" Background="#FFFFFF" BorderThickness="1" BorderBrush="#E5E7EB">
                <StackPanel>
                    <TextBlock Text="Controle de Processos" FontSize="30" FontWeight="SemiBold" Foreground="#1F2937"/>
                    <TextBlock Text="Painel de prazos, pesquisa e atividade recente." Margin="0,4,0,0" Foreground="#6B7280"/>

                    <TextBlock Text="Sincronizando..." Visibility="{Binding CarregandoEmSegundoPlano, Converter={StaticResource BoolToVis}}" Margin="0,8,0,0" Foreground="#B45309" FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Atualizar" Width="110" Margin="0,0,8,0" Command="{Binding CarregarCommand}"/>
                        <Button Content="Exportar PDF" Width="130" Command="{Binding ExportarResumoPdfCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" Margin="0,0,0,18">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="0,0,8,0" Padding="12" CornerRadius="10" BorderThickness="1" BorderBrush="#FCA5A5" Background="#FEF2F2">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#B91C1C" Text="⚠ Processos Atrasados"/>
                        <TextBlock Text="{Binding TotalAtrasados}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                        <ListBox ItemsSource="{Binding PainelAtrasadosResumo}" Margin="0,8,0,0" MinHeight="84" MaxHeight="130" BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="8,0,0,0" Padding="12" CornerRadius="10" BorderThickness="1" BorderBrush="#FDE68A" Background="#FFFBEB">
                    <StackPanel>
                        <TextBlock FontWeight="SemiBold" Foreground="#A16207" Text="⏱ Para Atrasar"/>
                        <TextBlock Text="{Binding TotalAAtrasar}" FontSize="24" FontWeight="Bold" Margin="0,4,0,0"/>
                        <ListBox ItemsSource="{Binding PainelAAtrasarResumo}" Margin="0,8,0,0" MinHeight="84" MaxHeight="130" BorderThickness="0" Background="Transparent"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,0,0,14" Background="#FFF8FAFC">
                <StackPanel>
                    <DockPanel Margin="0,0,0,8" LastChildFill="True">
                        <TextBlock DockPanel.Dock="Left" Text="Pesquisar e selecionar processo" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <WrapPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button Content="Novo Processo" Command="{Binding NovoProcessoCommand}"/>
                            <Button Content="Buscar" Width="100" Command="{Binding BuscarProcessosCommand}"/>
                            <Button Content="Limpar" Width="100" Background="#64748B" BorderBrush="#64748B" Command="{Binding LimparBuscaCommand}"/>
                        </WrapPanel>
                        <TextBox MinWidth="280" Text="{Binding TextoBusca, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>

                    <TextBlock Text="{Binding TotalBusca, StringFormat=Resultados: {0}}" Margin="0,0,0,6" FontStyle="Italic" Opacity="0.85"/>

                    <DataGrid ItemsSource="{Binding ProcessosBusca}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectedItem="{Binding ProcessoBuscaSelecionado}"
                              MinHeight="180">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Número" Binding="{Binding Numero}" Width="150"/>
                            <DataGridTextColumn Header="Paciente" Binding="{Binding Paciente}" Width="2*"/>
                            <DataGridTextColumn Header="Genitor" Binding="{Binding Genitor}" Width="*"/>
                            <DataGridTextColumn Header="Juiz" Binding="{Binding Juiz}" Width="*"/>
                            <DataGridTextColumn Header="Tipo" Binding="{Binding TipoProcesso}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusCalculado}" Width="*"/>
                            <DataGridTemplateColumn Header="Ação" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Abrir" Command="{Binding DataContext.AbrirProcessoBuscaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <GroupBox Grid.Row="3" Header="Processos atrasados" Margin="0,0,0,14">
                <DataGrid ItemsSource="{Binding ProcessosAtrasados}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" MinHeight="190" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Processo" Binding="{Binding NumeroProcesso}" Width="130"/>
                        <DataGridTextColumn Header="Paciente" Binding="{Binding Paciente}" Width="180"/>
                        <DataGridTextColumn Header="Juiz" Binding="{Binding Juiz}" Width="180"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding StatusCalculado}" Width="150"/>
                        <DataGridTextColumn Header="Prazo" Binding="{Binding PrazoTexto}" Width="110"/>
                        <DataGridTextColumn Header="Salvamento" Binding="{Binding StatusSalvamentoTexto}" Width="170"/>
                        <DataGridTemplateColumn Header="Ação" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Abrir" Command="{Binding DataContext.AbrirProcessoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <StackPanel Grid.Row="4">
                <GroupBox Header="Processos a atrasar (próximos 7 dias)" Margin="0,0,0,14">
                    <DataGrid ItemsSource="{Binding ProcessosAAtrasar}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" MinHeight="190" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Processo" Binding="{Binding NumeroProcesso}" Width="130"/>
                            <DataGridTextColumn Header="Paciente" Binding="{Binding Paciente}" Width="180"/>
                            <DataGridTextColumn Header="Juiz" Binding="{Binding Juiz}" Width="180"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusCalculado}" Width="150"/>
                            <DataGridTextColumn Header="Prazo" Binding="{Binding PrazoTexto}" Width="110"/>
                            <DataGridTextColumn Header="Salvamento" Binding="{Binding StatusSalvamentoTexto}" Width="170"/>
                            <DataGridTemplateColumn Header="Ação" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Abrir" Command="{Binding DataContext.AbrirProcessoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <Border Padding="14" CornerRadius="10" BorderThickness="1" BorderBrush="#E3E8EF" Background="#F9FBFD" Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="Status de alterações não salvas" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding ResumoRascunhosTexto}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding UsuarioLogadoTexto}" Margin="0,3,0,0" Opacity="0.72"/>
                    </StackPanel>
                </Border>

                <GroupBox Header="Usuários ativos recentemente" Margin="0,0,0,14">
                    <DataGrid ItemsSource="{Binding UsuariosAtivosRecentemente}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" MinHeight="120">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Usuário" Binding="{Binding NomeUsuario}" Width="170"/>
                            <DataGridTextColumn Header="E-mail" Binding="{Binding EmailUsuario}" Width="220"/>
                            <DataGridTextColumn Header="Última atividade" Binding="{Binding UltimaAtividadeRelativaTexto}" Width="150"/>
                            <DataGridTextColumn Header="Último processo" Binding="{Binding UltimoProcessoTexto}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
