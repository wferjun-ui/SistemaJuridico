<UserControl x:Class="SistemaJuridico.Views.ProcessoEditorView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:views="clr-namespace:SistemaJuridico.Views">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- MultiusuÃ¡rio -->
        <views:ProcessoMultiusuarioHostView 
            DataContext="{Binding MultiusuarioVm}"
            Margin="0,0,0,8"/>

        <!-- Abas -->
        <TabControl Grid.Row="1">

            <TabItem Header="Dados do Processo">
                <views:ProcessoDetalhesView 
                    DataContext="{Binding DetalhesVm}" />
            </TabItem>

            <TabItem Header="Timeline">
                <views:ProcessoTimelineHostView 
                    DataContext="{Binding TimelineVm}" />
            </TabItem>

        </TabControl>

    </Grid>
</UserControl>
